<h3><%= cohort.name %> Leaderboard</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Last Push</th>
    </tr>
  </thead>
  <tbody>

    <% cohort.users_by_last_push.each_with_index do |user, idx| %>
    <tr>
      <th><%= idx + 1 %></th>
      <th><%= image_tag user.image, alt: "#{user.name}'s image", class: 'img-responsive leaderboard-img' %></th>
      <th><%= user.name %></th>
      <th>
      <% if user.snapshots.empty? || !user.snapshots.first.last_push %>
        N/A
      <% else %>
        <%= time_ago_in_words(user.snapshots.first.last_push) %> ago
      <% end %>
      </th>
    </tr>
    <% end %>

  </tbody>
</table>
