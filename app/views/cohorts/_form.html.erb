<%= form_for @cohort do |f| %>

<% if @cohort.errors.full_messages.any? %>
<div class="alert alert-danger">
  <ul>
    <% @cohort.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<%= f.select :user_ids, User.all.collect {|u| [u.name, u.id]}, {}, multiple: true, class: 'form-control' %>

<%= f.submit class: 'btn btn-primary' %>

<% end %>
